<p id="notice"><%= notice %></p>

<h1>Leads</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Price</th>
      <th>Number of bedrooms</th>
      <th>Number of bathrooms</th>
      <th>Square feet</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leads.each do |lead| %>
      <tr>
        <td><%= lead.address %></td>
        <td><%= lead.price %></td>
        <td><%= lead.number_of_bedrooms %></td>
        <td><%= lead.number_of_bathrooms %></td>
        <td><%= lead.square_feet %></td>
        <td><%= link_to 'Show', lead %></td>
        <td><%= link_to 'Edit', edit_lead_path(lead) %></td>
        <td><%= link_to 'Destroy', lead, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

